// Start Pipeline
pipeline {

  // Configure Jenkins Slave
  agent any

  // Start Pipeline
  stages {


    stage ('Install node'){
      steps{ 
          sh 'sudo apt update'
          sh 'sudo apt install nodejs'
          sh 'sudo apt install npm'
      }
    }
    
    
   
    


  } // End stages
} // End pipeline
